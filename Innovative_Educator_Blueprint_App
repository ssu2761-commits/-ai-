            { type: 'want', title: "月入十萬", desc: "頂尖行銷講師", icon: "fa-chart-line", color: "text-orange-600", bg: "bg-orange-50" }
        ];

        // --- Functions ---

        // 1. Initialize Charts
        function initCharts() {
            // Radar Chart - Competencies
            const ctxRadar = document.getElementById('competencyChart').getContext('2d');
            new Chart(ctxRadar, {
                type: 'radar',
                data: {
                    labels: ['日語教學', '行銷策略', 'AI 工具應用', '個人成長', '人際溝通'],
                    datasets: [{
                        label: '核心競爭力指數',
                        data: [95, 85, 90, 80, 95], // Estimated high values based on "Mastered" and goals
                        fill: true,
                        backgroundColor: 'rgba(234, 88, 12, 0.2)', // Orange-600 with opacity
                        borderColor: 'rgb(234, 88, 12)',
                        pointBackgroundColor: 'rgb(234, 88, 12)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgb(234, 88, 12)'
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: '#e5e7eb' },
                            grid: { color: '#e5e7eb' },
                            pointLabels: {
                                font: { size: 14, family: "'Noto Sans TC', sans-serif" },
                                color: '#44403c'
                            },
                            suggestedMin: 50,
                            suggestedMax: 100,
                            ticks: { display: false } // Hide numbers for cleaner look
                        }
                    },
                    plugins: {
                        legend: { display: false }
                    }
                }
            });

            // Doughnut Chart - Revenue Goal
            const ctxDoughnut = document.getElementById('revenueChart').getContext('2d');
            new Chart(ctxDoughnut, {
                type: 'doughnut',
                data: {
                    labels: ['旗艦線上課程', '專業工作坊', '一對一/企業諮詢', '翻譯服務'],
                    datasets: [{
                        label: '預估收入佔比',
                        data: [50, 20, 20, 10], // Hypothetical mix for 100k goal
                        backgroundColor: [
                            '#ea580c', // Orange
                            '#fb923c', // Light Orange
                            '#64748b', // Slate
                            '#cbd5e1'  // Light Slate
                        ],
                        hoverOffset: 4
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: { font: { family: "'Noto Sans TC', sans-serif" } }
                        }
                    }
                }
            });
        }

        // 2. Render Roadmap Phase
        function switchPhase(index) {
            // Update Tab Styles
            document.querySelectorAll('button[id^="tab-"]').forEach((btn, i) => {
                if (i === index) {
                    btn.className = "nav-active px-6 py-4 text-sm font-medium focus:outline-none transition-all";
                    // Add active filter visual indicator
                } else {
                    btn.className = "text-stone-500 hover:text-stone-700 px-6 py-4 text-sm font-medium focus:outline-none transition-all";
                }
            });

            // Update Content
            const data = phases[index];
            const container = document.getElementById('phase-content');
            
            let html = `
                <div class="animate-fade-in">
                    <div class="mb-6">
                        <h3 class="text-xl font-bold text-stone-800 mb-2">${data.title}</h3>
                        <p class="text-stone-600 italic bg-white p-3 rounded-lg border border-stone-100 inline-block">
                            <i class="fas fa-bullseye text-orange-500 mr-2"></i>目標：${data.goal}
                        </p>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-stone-200">
                            <thead class="bg-stone-100">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">行動項目 (Do)</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">目的 (Why)</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">成果 (Deliverable)</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-stone-200">
            `;

            data.items.forEach(item => {
                html += `
                    <tr>
                        <td class="px-6 py-4 whitespace-normal text-sm font-medium text-stone-900">${item.action}</td>
                        <td class="px-6 py-4 whitespace-normal text-sm text-stone-500">${item.why}</td>
                        <td class="px-6 py-4 whitespace-normal text-sm text-stone-500">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                ${item.result}
                            </span>
                        </td>
                    </tr>
                `;
            });

            html += `
                            </tbody>
                        </table>
                    </div>
                </div>
            `;
            
            container.innerHTML = html;
        }

        // 3. Render Matrix Grid
        function renderMatrix(filterType) {
            const container = document.getElementById('matrix-grid');
            container.innerHTML = '';
            
            const filtered = filterType === 'all' 
                ? matrixItems 
                : matrixItems.filter(item => item.type === filterType);

            filtered.forEach(item => {
                // Determine label
                let label = "";
                if(item.type === 'master') label = "精通的事";
                if(item.type === 'can') label = "能做的事";
                if(item.type === 'want') label = "想做的事";

                const card = document.createElement('div');
                card.className = `${item.bg} p-6 rounded-xl border border-stone-100 shadow-sm card-hover flex flex-col justify-between animate-fade-in`;
                card.innerHTML = `
                    <div>
                        <div class="flex justify-between items-start mb-4">
                            <div class="${item.color} p-2 bg-white rounded-lg shadow-sm">
                                <i class="fas ${item.icon} text-xl"></i>
                            </div>
                            <span class="text-xs font-semibold uppercase tracking-wide text-stone-400">${label}</span>
                        </div>
                        <h4 class="text-lg font-bold text-stone-800 mb-1">${item.title}</h4>
                        <p class="text-sm text-stone-600">${item.desc}</p>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        function filterMatrix(type) {
            // Update button styles
            document.querySelectorAll('.matrix-filter').forEach(btn => {
                if(btn.dataset.filter === type) {
                    btn.classList.remove('text-stone-500', 'hover:bg-stone-100');
                    btn.classList.add('bg-stone-100', 'text-stone-900', 'hover:bg-stone-200');
                } else {
                    btn.classList.add('text-stone-500', 'hover:bg-stone-100');
                    btn.classList.remove('bg-stone-100', 'text-stone-900', 'hover:bg-stone-200');
                }
            });
            renderMatrix(type);
        }

        // 4. Scroll Helper
        function scrollToSection(id) {
            document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
        }

        // Init
        document.addEventListener('DOMContentLoaded', () => {
            initCharts();
            switchPhase(0); // Load Phase 1 by default
            renderMatrix('all'); // Load all capabilities
        });

    </script>
</body>
</html>
